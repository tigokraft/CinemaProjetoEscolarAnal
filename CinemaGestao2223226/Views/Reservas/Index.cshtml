@model IEnumerable<CinemaGestao.Models.Reserva>

@{
    ViewData["Title"] = User.IsInRole("Administrador") ? "Todas as Reservas" : "Minhas Reservas";
}

<div class="container">
    <h1 class="mb-4">
        @(User.IsInRole("Administrador") ? "📋 Todas as Reservas" : "🎟️ Minhas Reservas")
    </h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Não há reservas registadas.
        </div>
        @if (User.IsInRole("Cliente"))
        {
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-film"></i> Ver Catálogo de Filmes
            </a>
        }
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Filme</th>
                        <th>Data e Hora</th>
                        <th>Sala</th>
                        <th>Bilhetes</th>
                        <th>Total</th>
                        <th>Data Reserva</th>
                        @if (User.IsInRole("Administrador"))
                        {
                            <th>Cliente</th>
                        }
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reserva in Model.OrderByDescending(r => r.DataReserva))
                    {
                        <tr>
                            <td>@reserva.Id</td>
                            <td><strong>@reserva.Sessao.Filme.Titulo</strong></td>
                            <td>@reserva.Sessao.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@reserva.Sessao.Sala</td>
                            <td>
                                <span class="badge bg-primary">@reserva.NumeroBilhetes</span>
                            </td>
                            <td>@((reserva.Sessao.Preco * reserva.NumeroBilhetes).ToString("C"))</td>
                            <td>@reserva.DataReserva.ToString("dd/MM/yyyy HH:mm")</td>
                            @if (User.IsInRole("Administrador"))
                            {
                                <td>@reserva.UtilizadorId</td>
                            }
                            <td>
                                <a asp-action="Details" asp-route-id="@reserva.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@reserva.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>