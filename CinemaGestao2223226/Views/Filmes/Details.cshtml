@model CinemaGestao.Models.Filme

@{
    ViewData["Title"] = "Detalhes do Filme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Filmes</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Titulo</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4 mb-4">
            @if (!string.IsNullOrEmpty(Model.CapaUrl))
            {
                <img src="@Model.CapaUrl" alt="@Model.Titulo" class="img-fluid rounded shadow" style="width: 100%; height: auto;">
            }
            else
            {
                <div class="bg-secondary rounded shadow d-flex align-items-center justify-content-center" style="height: 500px;">
                    <i class="bi bi-film" style="font-size: 5rem; color: white;"></i>
                </div>
            }
        </div>

        <div class="col-md-8">
            <h1 class="display-4 mb-3">@Model.Titulo</h1>
            
            <div class="mb-3">
                <span class="badge bg-primary fs-6 me-2">
                    <i class="bi bi-tag"></i> @Model.Genero
                </span>
                <span class="badge bg-info text-dark fs-6">
                    <i class="bi bi-clock"></i> @Model.DuracaoMinutos minutos
                </span>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Descrição</h5>
                </div>
                <div class="card-body">
                    <p class="lead">@Model.Descricao</p>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informações Técnicas</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4"><i class="bi bi-hash"></i> ID do Filme:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4"><i class="bi bi-link-45deg"></i> URL da Capa:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.CapaUrl))
                            {
                                <small class="text-muted text-break">@Model.CapaUrl</small>
                            }
                            else
                            {
                                <span class="text-muted">Sem capa</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar à Lista
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
            </div>
        </div>
    </div>
</div>
