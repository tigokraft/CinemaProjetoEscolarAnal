@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var isEnglish = (requestCulture?.RequestCulture.UICulture.Name ?? "pt-PT") == "en-US";
    var isAdmin = User.IsInRole("Administrador");
    // Admin always sees English, non-admin sees selected language
    var showEnglish = isAdmin || isEnglish;
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="@(showEnglish ? "Manage" : "Gerir")">
            @(showEnglish ? "Hello" : "Olá") @User.Identity?.Name!
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">
                @(showEnglish ? "Logout" : "Sair")
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
            @(showEnglish ? "Register" : "Registar")
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
            @(showEnglish ? "Login" : "Entrar")
        </a>
    </li>
}
</ul>
